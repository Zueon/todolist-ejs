<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newItems.forEach(item => { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= item %></p>
  </div>
  <% }) %>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="할 일 추가하기"
      autocomplete="off"
    />
    <button type="submit" name="button">+</button>
  </form>
</div>
<%- include ("footer") -%>
